@{
  Layout ="_Layout";
}

@model Factory.Models.Machine;

<h2>Add a Engineer</h2>

<h4>License an engineer to repair the @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" class="btn btn-success btn-sm" value="Save" />
}
<p>@Html.ActionLink("Go Back", "Index", "Machine", null, new { @class = "btn btn-secondary btn-lg col-6" })</p>
